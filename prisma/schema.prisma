generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_PRISMA")
}

model Product {
    id                    String   @id @default(cuid())
    availability          String[] // Array of availability options
    href                  String
    name                  String
    subtitle              String
    brand                 String
    price                 Json
    images                Json
    isRestrictedByAge     Boolean
    liquorFlag            Boolean
    isTobacco             Boolean
    originRegulated       Boolean
    singlePromo           Json? // Assuming singlePromo can be a JSON object
    promotionUnitPrice    Json? // Assuming promotionUnitPrice can be a JSON object 
    weighable             Json     // Assuming weighable can be a JSON object
    saleTypes             String[] // Array of sale types
    unitOfMeasure         String
    unitPrice             Json
    categories            String[] // Array of categories
    campaignBadgeUrl      String?
}
